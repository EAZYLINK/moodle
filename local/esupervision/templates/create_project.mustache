{{!
    @template esupervision/create_project

    Container to display project creation page

    Example context (json):
    {
      "title": "create project"
    }
}}

<h1>{{title}}</h1>

<form method="POST">
    <div class="row p-3">
        <label for="project_name" class="form-label col-5">Project Name:</label>
        <input type="text" id="project_name" name="project_name" class="form-control col-6" required>
    </div>
    <div class="row p-3">
        <label for="project_name" class="form-label col-5">Project Description:</label>
        <textarea id="project_description" name="project_description" class="form-control col-6" required></textarea>
    </div>   
    <div class="row p-3">
        <label for="project_supervisor" class="form-label col-5">Assigned Supervisor:</label>
        <input type="text" id="project_supervisor" name="project_supervisor" class="form-control col-6" required>
    </div>
    <div class="row p-3">
        <label for="project_status" class="form-label col-5">Status:</label>
        <input type="text" id="project_status" name="project_status" class="form-control col-6" required>
    </div>
    <div>
        <button type="submit" class="btn btn-primary btn-lg">Submit</button>
    </div>
</form>
{{!
    @template local_esupervision/project_list

    Container to display project topics such as:
    - project id
    - project name
    - project description
    - project supervisor
    - project status

    Example context (json):
    {
        "id": "PROJ-001",
        "project name": "Water management system",
        "project description": "A research work on the various water management systems in Nigeria",
        "project supervisor": "Dr. Kate",
        "Project status": "pending"
    }
}}

<table class="table">
    <tbody>
        <tr>
            <th>SN</th>
            <th>Project Name</th>
            <th>Description</th>
            <th>Assigned Supervisor</th>
            <th>Student Name</th>
        </tr>
    {{#project}}
        <tr>
            <td>{{id}}</td>
            <td>{{name}}</td>
            <td>{{description}}</td>
            <td>{{supervisor_name}}</td>
            <td>{{student_name}}</td>
        </tr>
    {{/project}}
    </tbody>
</table>
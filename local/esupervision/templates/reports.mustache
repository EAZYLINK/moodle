{{#issupervisor}}
<table class="table">
    <caption class="text-center">
        Submitted projects
    </caption>
    <tbody>
        <tr>
            <th>SN</th>
            <th>Student Name</th>
            <th>Title</th>
            <th>Description</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
        {{#reports}}
        <tr>
            <td>{{ id }}</td>
            <td>{{ studentname }}</td>
            <td>{{ title }}</td>
            <td>{{ description }}</td>
            <td>{{ status }}</td>
            <td>
                <button class="btn"><a href="?action=view&id={{ id }}">view</a></button>
            </td>
        </tr>
        {{/reports}}
    </tbody>
</table>
{{/issupervisor}}

{{^issupervisor}}
<div class="container">
    <h4 class="mt-5">Submissions</h4>
    <div class="row">
        {{#reports}}
        <div class="col-3 card mx-3">
            <div class="card-body">
                <div class="card-text my-2"><span style="font-weight: bold;">Title: </span> {{ title }}</div>
                <div class="card-text"><span style="font-weight: bold;">Description: </span> {{ description }}</div>
                <small class="card-text"><span style="font-weight: bold;">timecreated: </span> {{timecreated}}</small><br>
                <small class="card-text"><span style="font-weight: bold;">timemodified: </span> {{timemodified}}</small><br>
                <a href="{{url}}" >download report</a>
                <div class="text-right">
                    <a href="?action=edit&id={{ id }}" class="btn"><img src="../assets/edit.png"></a>
                    <a href="?action=delete&id={{ id }}" class="btn"><img src="../assets/delete.png"></a>
                </div>
            </div>
            {{#comments}}
            <div>Supervisor's comment: {{comment}}</div>
            {{/comments}}
        </div>
        {{/reports}}
    </div>
</div>
{{/issupervisor}}

{{#viewreport}}
<div class="container">
    <h4 class="mt-5">Report details</h4>
    {{#report}}
    <div class="card mb-5 w-50">
        <div class="card-body">
            <div class="card-title my-2"><span style="font-weight: bold;">Title:</span> {{ title }}</div>
            <div class="card-text my-2">Description: {{ description }}</div>
            <div class="card-text my-2">Student name: {{ studentname }}</div>
            <small class="card-text my-2">Last modified: {{timemodified}}</small><br>
            <a href="{{url}}">download report</a>
            <div class="text-center my-2"> 
                <a href="?action=approve&id={{ id }}" class="btn btn-outline-primary mx-3">Approve report</a>
                <a href="?action=reject&id={{ id }}" class="btn btn-outline-danger mx-3">Reject report</a>
            </div>
        </div>
        {{/report}}
    </div>
    {{/viewreport}}
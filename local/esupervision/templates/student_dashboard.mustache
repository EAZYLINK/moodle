{{!
    @template esupervision/project_list

    Container to display supervisor dashboard

    Example context (json):
    {
        "id": "PROJ-001",
        "project name": "Water management system",
        "project description": "A research work on the various water management systems in Nigeria",
        "project supervisor": "Dr. Kate",
        "Project status": "pending"
    }
}}

<h2 class="text-center">Hello, {{student_name}}!</h2>
{{#announcement}}
<h1>{{title}}</h1>
<p>{{content}}</p>
{{/announcement}}

<h1>Your Project:</h1>
{{#project}}
    <ul>
        <li>
        <h3>Project title: {{name}}</h3>
        <p>Description: {{description}}</p>
        <p>Assigned Supervisor: {{supervisor}}</p>
        <p>Status: {{status}}</p>
        </li>
    </ul>
{{/project}}